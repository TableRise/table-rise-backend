{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "max-len": ["error", {
            "code": 90,
            "ignoreComments": true,
            "ignoreTrailingComments": true
        }],
        "arrow-parens": "error",
        "no-await-in-loop": "error"
    }
}
