{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": ".",
        "target": "es2019",
        "module": "commonjs",
        "typeRoots": ["./node_modules/@types", "src/types/configs", "src/**/*.d.ts"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"],
            "test/*": ["test/*"]
        }
    },
    "exclude": ["node_modules", "coverage"]
}
