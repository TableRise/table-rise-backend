{
  "name": "backend-table-rise",
  "version": "1.0.0",
  "description": "A project to provide an API to TableRise application",
  "main": "src/server.js",
  "scripts": {
    "start": "npm run build && node build/src/server.js",
    "build": "tsc",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --verbose ./test/unit",
    "test:integration": "jest --verbose ./test/integration",
    "test:coverage": "jest --verbose --coverage",
    "dev": "npx nodemon",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "check-lib": "node scripts/checkUnauthorizedChars.js",
    "check-cov": "node scripts/checkCoverage.js"
  },
  "_moduleAliases": {
    "src": "./build/src/"
  },
  "keywords": [],
  "author": "Adson Gomes Oliveira (https://github.com/Adson-Gomes-Oliveira)",
  "license": "ISC",
  "devDependencies": {
    "@tablerise/auto-swagger": "1.1.4",
    "@types/bcrypt": "5.0.0",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.1",
    "@types/module-alias": "2.0.1",
    "@types/node": "20.1.1",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "eslint": "8.40.0",
    "eslint-config-standard-with-typescript": "34.0.1",
