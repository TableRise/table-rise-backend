    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "bcrypt": "5.1.0",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "glob": "10.2.7",
    "helmet": "7.0.0",
    "jsonwebtoken": "9.0.0",
    "module-alias": "2.2.3",
    "mongoose": "7.1.0",
